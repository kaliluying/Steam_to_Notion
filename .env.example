# Notion 配置
# 从 https://www.notion.so/my-integrations 获取 Integration Token
NOTION_TOKEN=your_notion_token_here
# 父页面ID（用于创建新数据库），从Notion页面URL中获取
NOTION_PAGE_ID=your_notion_page_id_here
# 已有数据库ID（可选，如果提供则连接到已有数据库而不是创建新数据库）
# NOTION_DATABASE_ID=your_database_id_here

# Steam 配置
# Steam API密钥，从 https://steamcommunity.com/dev/apikey 获取
STEAM_TOKEN=your_steam_token_here
# Steam用户ID（数字ID或自定义ID）
STEAM_USER=your_steam_user_id_here

# 导入选项（true/false, 1/0, yes/no, on/off）
# 使用Steam商店背景作为游戏封面
STORE_BG_COVER=true
# 跳过Steam商店中已下架的游戏
SKIP_NON_STEAM=false
# 仅从游戏库获取信息，不使用Steam商店API
USE_ONLY_LIBRARY=false
# 跳过免费游戏（免费游玩）
SKIP_FREE_STEAM=false
# 不使用缓存的游戏信息
STEAM_NO_CACHE=true
# 允许重复导入（默认会跳过已存在的游戏）
ALLOW_DUPLICATES=false

# 测试限制（可选，限制导入的游戏数量，用于测试）
# TEST_LIMIT=10

# 调试模式（true/false, 1/0, yes/no, on/off）
# 开启后异常时会抛出完整堆栈信息
DEBUG=false
